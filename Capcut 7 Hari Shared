    <script>
        // --- Konfigurasi Tombol ---
        const nomorTelepon = '6285187916348'; // Ganti dengan nomor tujuan Anda

        // --- Fungsi untuk mendapatkan tanggal hari ini dalam format "DD NamaBulan YYYY" ---
        function getFormattedDate() {
            const today = new Date();
            const day = today.getDate();
            const year = today.getFullYear();
            const monthNames = ["Januari", "Februari", "Maret", "April", "Mei", "Juni",
                                "Juli", "Agustus", "September", "Oktober", "November", "Desember"];
            const month = monthNames[today.getMonth()];
            return `${day} ${month} ${year}`;
        }

        // --- Membuat pesan dengan tanggal dinamis ---
        const tanggalHariIni = getFormattedDate();
        
        // Menggabungkan string. \n digunakan untuk baris baru.
        const pesan = [
            `Halo, saya sudah memesan:`,
            '', // Baris kosong
            `Produk: CapCut Pro`,
            'Variasi: Shared Akun - 7 HARI',
            `Harga: Rp 8.000`,
            `Tanggal: ${tanggalHariIni}`,
            '', // Baris kosong
            `Ditunggu untuk akun capcutnya ya. Terima kasih.`
        ].join('\n');


        // Meng-encode pesan agar sesuai format URL
        const pesanEncoded = encodeURIComponent(pesan);

        // Membuat URL lengkap untuk API WhatsApp
        const urlWhatsApp = `https://wa.me/${nomorTelepon}?text=${pesanEncoded}`;

        // Menetapkan URL yang sudah jadi ke atribut 'href' pada tombol
        document.getElementById('whatsapp-button').href = urlWhatsApp;
    </script>

